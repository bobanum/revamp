{
    "name": "bobanum/revamp",
    "license": "MIT",
    "description": "php error handling for cool kids",
    "keywords": ["library", "error", "handling", "exception", "revamp", "throwable"],
    "homepage": "https://bobanum.github.io/revamp/",
    "authors": [
        {
            "name": "Martin Boudreau",
            "homepage": "https://github.com/bobanum",
            "role": "Developer"
        }
    ],
    "scripts": {
        "test": "phpunit --testdox tests"
    },
    "require": {
        "php": "^5.5.9 || ^7.0 || ^8.0",
        "psr/log": "^1.0.1 || ^2.0 || ^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8.36 || ^5.7.27 || ^6.5.14 || ^7.5.20 || ^8.5.8 || ^9.3.3",
        "mockery/mockery": "^0.9 || ^1.0",
        "symfony/var-dumper": "^2.6 || ^3.0 || ^4.0 || ^5.0"
    },
    "suggest": {
        "symfony/var-dumper": "Pretty print complex values better with var-dumper available",
        "whoops/soap": "Formats errors as SOAP responses"
    },
    "autoload": {
        "psr-4": {
            "Revamp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Revamp\\": "tests/Revamp/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.7-dev"
        }
    }
}
